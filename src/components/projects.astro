<section
  id="projects"
  class="py-16 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto px-4">

    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Portfolio</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-12">Evidencias</h3>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">

      <!-- SQL (Activo) -->
      <a
        href="https://github.com/nicolasmatheus71/sql-scripts"
        target="_blank"
        rel="noopener noreferrer"
        class="group rounded-2xl p-8 bg-[#1414149c] border border-[var(--white-icon-tr)] hover:bg-opacity-80 transition-all duration-300 hover:scale-[1.05] flex items-center justify-center"
      >
        <span class="text-xl font-semibold group-hover:text-white">
          SQL
        </span>
      </a>

      <!-- PL/SQL Scripts -->
      <div class="rounded-2xl p-8 bg-[#14141440] border border-dashed border-[var(--white-icon-tr)] flex items-center justify-center opacity-60">
        <span class="text-xl font-semibold">
          PL/SQL Scripts
        </span>
      </div>

      <!-- NoSQL -->
      <div class="rounded-2xl p-8 bg-[#14141440] border border-dashed border-[var(--white-icon-tr)] flex items-center justify-center opacity-60">
        <span class="text-xl font-semibold">
          NoSQL
        </span>
      </div>

      <!-- Proyecto -->
      <div class="rounded-2xl p-8 bg-[#14141440] border border-dashed border-[var(--white-icon-tr)] flex items-center justify-center opacity-60">
        <span class="text-xl font-semibold">
          Proyecto
        </span>
      </div>

    </div>

  </div>
</section>
